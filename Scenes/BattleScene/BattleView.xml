<?xml version="1.0" encoding="utf-8"?>
<View>
	<Panel Name="BattlePanel" Anchor="$CenterX,$CenterY" Bounds="-85,-76,290,120" TransitionOut="Shrink">
		<DataGrid Items="Ref InitialEnemies" Bounds="8,0,240,96" Alignment="Cascading" Scrolling="False">
			<Scenes.BattleScene.BattleEnemy EnemyRecord="Ref DataGrid"/>
		</DataGrid>
		<DataGrid Items="Bind PlayerProfile.Party" Scrolling="False" Bounds="4000,38,24,96" Alignment="Cascading">
			<Panel Alignment="Vertical" Bounds="0,6,102,24">
				<Scenes.BattleScene.BattlePlayer HeroModel="Bind DataGrid" Alignment="BottomLeft"/>
			</Panel>
		</DataGrid>
		
	</Panel>

	<Panel Name="EnemyPanel" Style="BattleWindow" Anchor="$CenterX,$CenterY" Bounds="-14500,30,290,60" InnerMargin="6,6,6,8" TransitionOut="Shrink">
		<DataGrid Items="Bind EnemyNames" Alignment="Cascading" Bounds="0,0,104,76">
			<Panel Bounds="0,0,104,12" Alignment="Vertical">
				<Label Text="Ref DataGrid.Name" Font="Main" Color="#FFFFFF" Alignment="Cascading" TextAlignment="Left" Bounds="0,0,96,12"/>
				<Label Text="Bind DataGrid.Count" Font="Main" Color="#FFFFFF" Alignment="Cascading" TextAlignment="Left" Bounds="0,0,8,12"/>
			</Panel>
		</DataGrid>
	</Panel>

	<Panel Name="PlayerPanel" Style="BattleWindow" Anchor="$CenterX,$CenterY" Bounds="-35,30,180,60" TransitionOut="Shrink" InnerMargin="8,8,8,8" Visible="False">

		<Label Text="HP" Font="Interface" Alignment="Relative" TextAlignment="Center" Bounds="91,0,16,6"/>
		<Label Text="MP" Font="Interface" Alignment="Relative" TextAlignment="Center" Bounds="146,0,16,6"/>
		
		<DataGrid Items="Bind PlayerProfile.Party" Alignment="Cascading" Bounds="0,10,164,44">
			<Panel Alignment="Vertical" Bounds="0,0,164,22">
				<Label Text="Bind DataGrid.Name" Font="Main" Color="Bind DataGrid.NameColor" Alignment="Left" TextAlignment="Left" Bounds="0,-8,62,20"/>
				<Label Text="Bind DataGrid.HP" Font="Main" Color="Bind DataGrid.HealthColor" Alignment="Left" TextAlignment="Right" Bounds="0,-5,32,20"/>
				<Label Text="/" Font="Main" Color="Bind DataGrid.HealthColor" TextAlignment="Right" Bounds="71,-1,32,20"/>
				<Label Text="Bind DataGrid.MaxHP" Font="Main" Color="Bind DataGrid.HealthColor" Alignment="Left" TextAlignment="Left" Bounds="8,3,32,20"/>

				<Label Text="Bind DataGrid.MP" Font="Main" Alignment="Left" TextAlignment="Center" Bounds="8,-6,24,20"/>
				<Gauge Minimum="0" Maximum="255" Frame="TechGauge" Background="TechGaugeBackground" Bounds="-1,3,56,10" InnerMargin="3,0,3,0">
					<GaugeBar Name="MusicBar" Bar="TechGaugeBar" Value="Bind DataGrid.Initiative" Color="Bind DataGrid.InitiativeColor"/>
				</Gauge>
			</Panel>
		</DataGrid>
	</Panel>
	
</View>