<?xml version="1.0" encoding="utf-8"?>
<View>
	<Panel Style="BattleWindow" Anchor="$CenterX,$CenterY" Bounds="-120,-81,149,21" InnerMargin="7,5,7,0" TransitionIn="Expand">
		<Label Text="Ref LocationName" Font="Main" Alignment="Left" TextAlignment="Left"/>
	</Panel>

	<Panel Style="BattleWindow" Anchor="$CenterX,$CenterY" Bounds="29,-81,91,21" InnerMargin="5,5,5,0" TransitionIn="Expand">
		<Label Text="Gold:" Font="Main" Alignment="Left" TextAlignment="Left" Bounds="1,0,40,10"/>
		<Label Text="Bind PlayerProfile.Money" Font="Main" Alignment="Left" TextAlignment="Right" Bounds="0,0,40,10"/>
	</Panel>
	
	<Panel Name="PartyPanel" Style="BattleWindow" Anchor="$CenterX,$CenterY" Bounds="-60,-60,180,105" InnerMargin="4,5,4,0" TransitionIn="Expand">
		<RadioBox Name="PartyList" Items="Ref PlayerProfile.Party" Scrolling="False" Alignment="Stretch" Enabled="False" >
			<RadioButton Style="Blank" PushedStyle="LabelGlow" Bounds="0,0,170,48" Alignment="Vertical" Action="SelectParty" ActionParameter="Ref DataGrid">
				<Image Picture="Bind DataGrid.PortraitSprite" Alignment="Cascading" Bounds="0,0,48,48"/>
				<Panel Bounds="0,0,122,48" Alignment="Cascading">
					
					<Label Text="Bind DataGrid.Name" Alignment="Cascading" Font="Main" TextAlignment="Left" Bounds="2,0,88,10"/>
					<Label Text="LV" Alignment="Cascading" Font="Main" TextAlignment="Left" Bounds="0,0,16,10"/>
					<Label Text="Bind DataGrid.Level" Alignment="Cascading" Font="Main" TextAlignment="Left" Bounds="0,0,16,10"/>
				
					<Panel Bounds="0,0,122,10" Alignment="Cascading">
						<Label Text="HP:" Font="Main" Alignment="Left" TextAlignment="Left" Bounds="2,0,24,10"/>
						<Label Text="Bind DataGrid.HP" Font="Main" Color="Bind DataGrid.HealthColor" Alignment="Left" TextAlignment="Right" Bounds="0,0,32,10"/>
						<Label Text="/" Font="Main" Color="Bind DataGrid.HealthColor" Alignment="Left" TextAlignment="Right" Bounds="0,0,8,10"/>
						<Label Text="Bind DataGrid.MaxHP" Font="Main" Color="Bind DataGrid.HealthColor" Alignment="Left" TextAlignment="Left" Bounds="0,0,32,10"/>
					</Panel>

					<Panel Bounds="0,0,122,10" Alignment="Cascading">
						<Label Text="MP:" Font="Main" Alignment="Left" TextAlignment="Left" Bounds="2,0,24,10"/>
						<Label Text="Bind DataGrid.MP" Font="Main" Alignment="Left" TextAlignment="Right" Bounds="0,0,32,10"/>
						<Label Text="/" Font="Main" Alignment="Left" TextAlignment="Right" Bounds="0,0,8,10"/>
						<Label Text="Bind DataGrid.MaxMP" Font="Main" Alignment="Left" TextAlignment="Left" Bounds="0,0,32,10"/>
					</Panel>

					<Label Text="Bind DataGrid.FieldStatus" Alignment="Cascading" Font="Main" TextAlignment="Left" Bounds="2,0,120,10"/>
				</Panel>
			</RadioButton>
		</RadioBox>
	</Panel>

	<Panel Style="BattleWindow" Anchor="$CenterX,$CenterY" Bounds="-120,-60,60,78" InnerMargin="4,6,4,0" TransitionIn="Expand">
		<RadioBox Name="CommandBox" Items="Bind AvailableCommands" Scrolling="False" Alignment="Stretch">
			<RadioButton Style="Blank" PushedStyle="LabelGlow" Bounds="0,-1,50,12" Alignment="Vertical" Action="SelectCommand" ActionParameter="Ref DataGrid">
				<Label Text="Ref DataGrid" Alignment="Left" Font="Main" TextAlignment="Left" Bounds="2,1,50,10"/>
			</RadioButton>
		</RadioBox>
	</Panel>

</View>